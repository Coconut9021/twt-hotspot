<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="stylesheet" href="/css/style.css">

    <title>Login</title>
<body>      
        <div class="container">
            <form action="/login" method="POST" class="">
                <div class="form-group">
                    <label>Full Name</label>
                    <div>
                        <input type="text" name="fullName" id="fullname" class=""> 
                    </div>
                    <div class="error" id="termsError">Full Name is required</div>
                </div>
                <div class="form-group">
                    <label for="email" class="">Email</label>
                    <div class="">
                        <input type="text" name="email" id="username" class="5" value="">
                    </div>
                    <div class="error" id="termsError">Valid email is required</div>
                </div>
                <div class="form-group">
                    <label class="">Phone Number</label>
                    <div>
                        <input type="text" name="phone" id="phonenumber" class="">
                    </div>
                    <div class="error" id="termsError">Valid phone number is required</div>
                </div>
                <div class="form-group">
                    <label class="">Company Name</label>
                    <div>
                        <input type="text" name="company" id="company" class="" >
                    </div>
                </div>
                    <div class="checkbox-group">
                    <input type="checkbox" id="terms" name="terms" required>
