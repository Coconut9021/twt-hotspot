    </style>

<body>
        <div class="md:h-screen w-full md:mt-0 mt-4 flex flex-col justify-center items-center">
            <div class="w-72 p-4">
                <img src="imgs/logo.jpg"  alt="">
            </div>
            
        <form action="http://192.168.5.1/login" method="POST" class="md:w-1/2 w-11/12 space-y-4 pt-2">
                <div class="p-2 bg-red-100 text-red-700 border-red-400 border rounded-md w-full">
                    <p>Incorrect Username/Password</p>
                </div>
                <div class="p-2 bg-red-100 text-red-700 border-red-400 border rounded-md w-full">
                    <p class="bg-red-100">error</p>
                </div>
            <div>
                <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Username</label>
                <div class="mt-2">
                    <input type="text" maxlength="10" name="username" id="username" class="w-full border rounded-md p-1.5" placeholder="0771222333" required>
                </div>
            </div>
            <div>
                <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                <div class="mt-2">
                    <input type="password" name="password" id="password" class="w-full border rounded-md p-1.5" placeholder="*********" required>
                </div>
            </div>
            <div class="flex items-center gap-x-2">
                <input onclick="showPassword()" type="checkbox">
                <p class="text-sm">Show Password</p>
            </div>
            <button type="submit" name="login" class="flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600">Login</button>
        </form>

        <div class="flex py-4 justify-center items-center">
            <p>OR BUY</p>
        </div>

        <div class="md:w-1/2 w-11/12 border-4 border-sky-500 rounded-md flex justify-center items-center">
            <form action="/ecocash" method="POST" class="space-y-4 flex flex-col items-center justify-center">
                <p>Valid for 10 days</p>
                <button class="text-2xl py-2 px-6 border mb-2 shadow-sm rounded-full border-black">5GB</button>

            </form>
        </div>
        </div>
        
        
    <script>
        function showPassword() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
    </script>
</body>

