<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Masimba Hotspot Login</title>
  <style>
    :root {
      --primary-color: #222222;
      --primary-hover: #000000;
      --accent-color: #FFDD33;
      --secondary-color: #F5F5F5;
      --text-color: #222222;
      --light-text: #555555;
      --error-color: #E63946;
      --success-color: #2A9D8F;
      --background-color: #F8F8F8;
      --form-bg: #FFFFFF;
      --border-color: #E0E0E0;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      background-color: var(--background-color);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 1rem;
    }
    
    .container {
      width: 100%;
      max-width: 400px;
      background-color: var(--form-bg);
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }
    
    .header {
      background-color: white;
      color: var(--primary-color);
      padding: 1.5rem;
      text-align: center;
      border-bottom: 3px solid var(--accent-color);
    }
    
    .logo-container {
      margin-bottom: 1rem;
      display: flex;
      justify-content: center;
    }
    
    .logo {
      width: 180px;
      height: auto;
      object-fit: contain;
    }
    
    .header h1 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }
    
    .header p {
      font-size: 0.9rem;
      color: var(--text-color);
    }
    
    .wifi-icon {
      display: flex;
      justify-content: center;
      margin-top: 1rem;
    }
    
    .form-container {
      padding: 1.5rem;
    }
    
    .form-group {
      margin-bottom: 1.2rem;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--text-color);
      font-size: 0.9rem;
    }
    
    .form-input {
      width: 100%;
      padding: 0.8rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.3s;
    }
    
    .form-input:focus {
      outline: none;
      border-color: var(--accent-color);
      box-shadow: 0 0 0 2px rgba(255, 221, 51, 0.2);
    }
    
    .btn {
      width: 100%;
      padding: 0.8rem;
      background-color: var(--accent-color);
      color: var(--primary-color);
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-top: 0.5rem;
    }
    
    .btn:hover {
      background-color: #FFD500;
    }
    
    .info-text {
      text-align: center;
      font-size: 0.85rem;
      color: var(--light-text);
      margin-top: 1.5rem;
    }
    
    .status-message {
      padding: 0.7rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      font-size: 0.9rem;
      display: none;
    }
    
    .error {
      display: block;
      background-color: rgba(230, 57, 70, 0.1);
      color: var(--error-color);
      border: 1px solid rgba(230, 57, 70, 0.3);
    }
    
    .success {
      display: block;
      background-color: rgba(42, 157, 143, 0.1);
      color: var(--success-color);
      border: 1px solid rgba(42, 157, 143, 0.3);
    }
    
    .footer {
      padding: 1rem;
      text-align: center;
      background-color: var(--secondary-color);
      font-size: 0.85rem;
      color: var(--light-text);
    }
    
    .network-strength {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }
    
    .signal-bar {
      height: 12px;
      width: 6px;
      background-color: rgba(0, 0, 0, 0.15);
      border-radius: 1px;
    }
    
    .active {
      background-color: var(--accent-color);
    }
    
    /* Responsive adjustments */
    @media (max-width: 480px) {
      .container {
        border-radius: 8px;
      }
      
      .header {
        padding: 1.2rem;
      }
      
      .form-container {
        padding: 1.2rem;
      }
      
      .btn {
        padding: 0.7rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="logo-container">
        <!-- Using a placeholder image with the same dimensions as the Masimba logo -->
        <img src="logo.png" alt="Masimba Logo" class="logo" style="background: url('data:image/svg+xml;base64,') no-repeat center; background-size: contain;">
      </div>
      <p>Connect to our secure WiFi network</p>
      <div class="wifi-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#222222" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12.55a11 11 0 0 1 14.08 0"></path>
          <path d="M1.42 9a16 16 0 0 1 21.16 0"></path>
          <path d="M8.53 16.11a6 6 0 0 1 6.95 0"></path>
          <line x1="12" y1="20" x2="12" y2="20"></line>
        </svg>
      </div>
      <div class="network-strength">
        <div class="signal-bar active"></div>
        <div class="signal-bar active"></div>
        <div class="signal-bar active"></div>
        <div class="signal-bar"></div>
      </div>
    </div>
    
    <div class="form-container">
      <div class="status-message" id="status-message"></div>
      
      <form id="login-form">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" class="form-input" placeholder="Enter your email address" required>
        </div>
        
        <button type="submit" class="btn" id="login-btn">Connect Now</button>
      </form>
      
      <p class="info-text">By connecting, you agree to our Terms of Service and Privacy Policy</p>
    </div>
    
    <div class="footer">
      Need help? Contact the Masimba network administrator
    </div>
  </div>
  
  <script>
    // Create and embed the original Masimba logo as a background image
    window.addEventListener('DOMContentLoaded', function() {
      // Create a canvas to draw the logo
      const canvas = document.createElement('canvas');
      canvas.width = 200;
      canvas.height = 80;
      const ctx = canvas.getContext('2d');
      
      // Draw yellow semi-circle at the top
      ctx.beginPath();
      ctx.arc(40, 40, 40, Math.PI, 0, false);
      ctx.fillStyle = '#FFDD33';
      ctx.fill();
      
      // Draw black semi-circle at the bottom
      ctx.beginPath();
      ctx.arc(40, 40, 40, 0, Math.PI, false);
      ctx.fillStyle = '#222222';
      ctx.fill();
      
      // Add "asimba" text
      ctx.font = 'bold 32px Arial';
      ctx.fillStyle = '#222222';
      ctx.fillText('asimba', 85, 52);
      
      // Replace the placeholder with this image
      const logoImg = document.querySelector('.logo');
      logoImg.src = canvas.toDataURL();
    });
    
    // Form submission handler
    document.getElementById('login-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const email = document.getElementById('email').value;
      const statusMessage = document.getElementById('status-message');
      const loginBtn = document.getElementById('login-btn');
      
      // Simple validation example
      if (email.trim() === '') {
        statusMessage.textContent = 'Please enter your email address';
        statusMessage.className = 'status-message error';
        return;
      }
      
      // Basic email validation
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email)) {
        statusMessage.textContent = 'Please enter a valid email address';
        statusMessage.className = 'status-message error';
        return;
      }
      
      // Simulate login process
      loginBtn.textContent = 'Connecting...';
      loginBtn.disabled = true;
      
      setTimeout(() => {
        // For demo purposes, we'll show a success message
        statusMessage.textContent = 'Successfully connected to the Masimba network!';
        statusMessage.className = 'status-message success';
        loginBtn.textContent = 'Connected';
        
        // In a real application, you would redirect or perform additional actions
        setTimeout(() => {
          // Redirect logic would go here
          loginBtn.textContent = 'Connect Now';
          loginBtn.disabled = false;
        }, 2000);
      }, 1500);
    });
  </script>
</body>
</html>