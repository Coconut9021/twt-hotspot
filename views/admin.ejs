<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <h1>Administrator Login</h1>
        <p>Enter your credentials below.</p>
        <form action="/admin" method="POST" class="login-form">
            <div class="form-group">
                <label for="username" class="">Username</label>
                <input type="text" name="username" id="username" class="">
                <div class="error" id="username-error" style="display: none;">Invalid username</div>
            </div>
            <div class="form-group">
                <label for="password" class="">Password</label>
                <input type="password" name="password" id="password" class="" placeholder="********">
                <div class="error" id="password-error" style="display: none;">Invalid password</div>
            </div>
            <button type="submit" name="login" class="submit-btn">Login</button>
        </form>
    </div>

    <script src="/js/login.js"></script>
    <script>
        function showPassword() {
            var x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</body>
</html>
