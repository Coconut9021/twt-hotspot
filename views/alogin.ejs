<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="stylesheet" href="/css/style.css">

    <title>Login</title>
<body>      
        <div class="container">
            <form action="http://192.168.5.1/login" method="POST" class="">
                <div class="form-group" style="display: none;">
                    <label for="email" class="">Password</label>
                    <div class="">
                        <input type="password" name="password" id="password" class="" placeholder="*********" value="Password1234">
                    </div>
                </div>
                <div class="form-group" style="display: none;">
                    <label for="email" class="">Username</label>
                    <div class="">
                        <input type="text" name="username" id="username" class="5" value="<%= email %>">
                    </div>
                </div>
                <button type="submit" name="login" class="">Login</button>
            </form>  
        </div>
        
    <script>
    function showPassword() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    </script>
</body>

</html>
